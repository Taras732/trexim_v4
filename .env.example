# Trexim v3 Environment Variables
# Copy this file to .env and fill in your values

# Application Settings
APP_NAME=Trexim v3
APP_ENV=production
DEBUG=False

# Security Keys (CHANGE THESE IN PRODUCTION!)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-change-in-production
SESSION_SECRET_KEY=your-session-secret-key-here-change-in-production

# Admin Initial Setup (only used for first admin user creation)
# After first login, these are ignored - password is stored securely hashed in DB
ADMIN_INIT_USERNAME=admin
ADMIN_INIT_PASSWORD=your-secure-password-here

# Database
# SQLite (development):
# DATABASE_URL=sqlite:///./trexim.db

# PostgreSQL via Docker (recommended for development):
# Run: docker-compose up -d
DATABASE_URL=postgresql://trexim:trexim2026@localhost:5432/trexim

# PostgreSQL (local installation):
# DATABASE_URL=postgresql://user:password@localhost:5432/trexim

# PostgreSQL with SSL (cloud/production):
# DATABASE_URL=postgresql://user:password@host:5432/trexim?sslmode=require

# File Uploads
UPLOAD_DIR=static/uploads
MAX_UPLOAD_SIZE=5242880

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,https://trexim.ai

# Optional: Email Settings (for contact form)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Optional: Analytics
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
